<% provide(:title, 'New Photo') %>
<h1>New Photo</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>Add a .jpg or .png file from the internet</p>
    <%= form_for(@photo) do |f| %>
      <%= f.label :image_url %>
      <%= f.text_field :image_url %>

      <%= hidden_field_tag "topic_id", @topic.id %>

      <%= f.submit "Create Photo", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
